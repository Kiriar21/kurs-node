<h1>Logowanie</h1>

<form method="post">

    <div class="mb-3">

        <label for="email" class="form-label">Adres email</label>
        <input type="email" 
            class="form-control" 
            name="email"
            id="email"
            value="<%= form.email %>"
            required
            autocomplete="on">
    </div>

    <div class="mb-3">

        <label for="password" class="form-label">Hasło</label>
        <input type="password" 
            class="form-control" 
            name="password"
            id="password"
            required
            autocomplete="on">
    </div>

    <% if (errors) { %>
        <div class="alert alert-danger">Nieprawidłowy email lub hasło.</div>
    <% } %>
    <button class="btn btn-primary">Zaloguj</button>

</form>